<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ChitietIphoneActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpage2_chitiet"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text_view_chitiet"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewpage2_chitiet"
        android:text="Tên điện thoại"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <ScrollView
        android:layout_below="@+id/text_view_chitiet"
        android:layout_above="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_view_idchitiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textColor="#2B2B1D"
            android:layout_below="@+id/text_view_chitiet"
            android:textSize="20sp"
            android:padding="6dp"/>
    </ScrollView>
    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circle_indicator3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:ci_drawable="@drawable/custum_circleindicator3"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"/>
    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:id="@+id/gia_chi_tiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá sản phẩm"
                android:textSize="18sp"
                android:textColor="@color/red"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/mua_ngay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F21A8EF4"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua ngay"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
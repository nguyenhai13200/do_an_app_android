<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardViewSanPham"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/ImageViewSp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@+id/ImageViewSp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">
                <TextView
                    android:textColor="#2F034A"
                    android:id="@+id/TextViewTensp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:layout_marginTop="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/TextViewGiasp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff00"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/img_add_cart"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/ImageViewSp"
                    android:src="@drawable/addcart"
                    android:background="@drawable/bg_blue_cart"
                    android:padding="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_alignParentEnd="true"/>
            </LinearLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>
